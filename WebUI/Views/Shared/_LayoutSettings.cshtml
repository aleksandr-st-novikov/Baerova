<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" type="text/css" href="~/lib/css/site.min.css">
    <script src="~/lib/js/jquery.min.js"></script>

</head>
<body style="padding:0;">
    <div class="container" style="margin-bottom:15px;">
        <div class="col-lg-12" style="background-color:#e5e5e5;height:100px;text-align:right;">
            <a class="btn btn-link" href="/" title="На главную">
                <i class="fa fa-home"></i>
            </a>
            <a class="btn btn-link" href="/home/managepartners" title="Заявки на регистрацию">
                <i class="fa fa-users"></i>
            </a>
            <a class="btn btn-link" href="/home/ManageSubscribers/1" title="Управление подписчиками">
                <i class="fa fa-envelope"></i>
            </a>
            <a class="btn btn-link" href="/articles" title="Управление публикациями">
                <i class="fa fa-file-text-o"></i>
            </a>
            <span style="text-align:right;">
                @Html.Action("login", "account")
            </span>
        </div>
    </div>
    <div class="container body-content">
        <div class="row">
            <div class="side-menu">
                @Html.Partial("_SideMenuSettings")
            </div>
            <div class="container-fluid">
                <div class="side-body">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <hr />
        <footer style="height:200px;background-color:cadetblue;">
            Блок 5
            @*<p>&copy; @DateTime.Now.Year</p>*@
        </footer>
    </div>

    <script src="~/lib/js/site.min.js"></script>
</body>
</html>
