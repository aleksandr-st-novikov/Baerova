<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/lib/css/site.min.css">
    
    @if (!@Request.Url.AbsoluteUri.Contains("editarticle"))
    {
        <script src="~/lib/js/jquery.min.js"></script>
    }

</head>
<body style="padding:0;">
    <div class="container" style="margin-bottom:15px;">
        <div class="col-lg-12" style="background-color:aqua;height:100px;">
            @if (User.IsInRole("Администратор"))
            {
                <a class="btn btn-link" href="/home/managepartners">
                    <i class="fa fa-users"></i>
                </a>
                <a class="btn btn-link" href="/settings">
                    <i class="fa fa-cogs"></i>
                </a>
            }
            @if (User.IsInRole("Администратор") || User.IsInRole("Редактор"))
            {
                <a class="btn btn-link" href="/articles">
                    <i class="fa fa-file-text-o"></i>
                </a>
            }
            <span style="text-align:right;">
                @Html.Action("login", "account")
            </span>
        </div>
    </div>
    <div class="container body-content">
        <div class="row">
            <div class="side-menu">
                @Html.Action("SideMenu","Home")
            </div>
            <div class="container-fluid">
                <div class="side-body">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <hr />
        <footer style="height:200px;background-color:cadetblue;">
            Блок 5
            @*<p>&copy; @DateTime.Now.Year</p>*@
        </footer>
    </div>
   
    <script src="~/lib/js/site.min.js"></script>
</body>
</html>
