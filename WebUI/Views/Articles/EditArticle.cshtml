

<link rel="stylesheet" type="text/css" href="~/lib/css/kendo.min.css">
<script src="~/lib/js/kendo.min.js"></script>

@{
    ViewBag.Title = "Публикация";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<span class="span-title">Публикация</span>

<div class="col-lg-12 no-padding" style="min-height:700px;margin-top:15px;">

    <h4>Заголовок</h4>
    @(Html.Kendo().Editor()
      .Name("editor")
      .HtmlAttributes(new { style = "width: 100%;height:300px" })
      .Tools(tools => tools
          .Clear()
          .Bold().Italic().Underline()
          .JustifyLeft().JustifyCenter().JustifyRight()
          .InsertUnorderedList().InsertOrderedList()
          .Outdent().Indent()
          .CreateLink().Unlink()
          .InsertImage()
          .InsertFile()
          .TableEditing()
          .ViewHtml()
          .Formatting()
          .FontSize()
          .FontColor()
          .CleanFormatting()
          )
      .ImageBrowser(imageBrowser => imageBrowser
          .Image("~/Content/UserFiles/Images/{0}")
          .Read("Read", "ImageBrowser")
          .Create("Create", "ImageBrowser")
          .Destroy("Destroy", "ImageBrowser")
          .Upload("Upload", "ImageBrowser")
          .Thumbnail("Thumbnail", "ImageBrowser"))
      .FileBrowser(fileBrowser => fileBrowser
         .File("~/Content/UserFiles/Images/{0}")
         .Read("Read", "FileBrowser")
         .Create("Create", "FileBrowser")
         .Destroy("Destroy", "FileBrowser")
         .Upload("Upload", "FileBrowser"))
     .Value("Заголовок")
     )

    <br />
    <h4>Основное содержание</h4>
    @(Html.Kendo().Editor()
      .Name("editor2")
      .HtmlAttributes(new { style = "width: 100%;height:600px" })
      .Tools(tools => tools
          .Clear()
          .Bold().Italic().Underline()
          .JustifyLeft().JustifyCenter().JustifyRight()
          .InsertUnorderedList().InsertOrderedList()
          .Outdent().Indent()
          .CreateLink().Unlink()
          .InsertImage()
          .InsertFile()
          .TableEditing()
          .ViewHtml()
          .Formatting()
          .FontSize()
          .FontColor()
          .CleanFormatting()
          )
      .ImageBrowser(imageBrowser => imageBrowser
          .Image("~/Content/UserFiles/Images/{0}")
          .Read("Read", "ImageBrowser")
          .Create("Create", "ImageBrowser")
          .Destroy("Destroy", "ImageBrowser")
          .Upload("Upload", "ImageBrowser")
          .Thumbnail("Thumbnail", "ImageBrowser"))
      .FileBrowser(fileBrowser => fileBrowser
         .File("~/Content/UserFiles/Images/{0}")
         .Read("Read", "FileBrowser")
         .Create("Create", "FileBrowser")
         .Destroy("Destroy", "FileBrowser")
         .Upload("Upload", "FileBrowser"))
     .Value("Заголовок")
    )
</div>



