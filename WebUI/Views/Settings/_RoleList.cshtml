@model List<WebUI.Models.RoleView>

<div id="RoleList">

    @foreach (var m in Model)
    {
        using (Ajax.BeginForm("RoleSave", "admin", new AjaxOptions
        {
            HttpMethod = "post",
            UpdateTargetId = "RoleList",
            InsertionMode = System.Web.Mvc.Ajax.InsertionMode.ReplaceWith,
            LoadingElementId = "progr"
        }))
        {
            <div class="col-lg-12 no-padding">
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.TextBoxFor(con => m.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(con => m.Name)
                    </div>
                </div>
                <div class="col-lg-2">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(con => m.Id)
                    <button type="submit" name="action" value="RoleSave" class="btn btn-success" title="Сохранить">
                        <i class="fa fa-save"></i>
                    </button>
                    <button type="submit" name="action" value="RoleDelete" class="btn btn-link" title="Удалить">
                        <i class="fa fa-trash-o"></i>
                    </button>
                </div>
            </div>
        }
    }
</div>
