@model List<Domain.Entities.BannerLink>

<div id="BannerList">
    @foreach (var m in Model)
    {
        using (Ajax.BeginForm("BannerSave", "settings", new AjaxOptions
        {
            HttpMethod = "post",
            OnComplete = "onCompleteUpdate('Settings','BannerList')",
            InsertionMode = System.Web.Mvc.Ajax.InsertionMode.ReplaceWith,
            LoadingElementId = "progr"
        }))
        {
            <div class="col-lg-12 no-padding">
                <div class="col-lg-12">
                    <div class="col-lg-10" style="padding-left:0;padding-right:5px;margin-bottom:5px">
                        <img src="~/content/userfiles/images/banner/top/@{@m.NumSlide}.jpg" style="max-width:100%;" />
                    </div>
                </div>
                <div class="col-lg-2">
                    <div class="form-group">
                        @Html.TextBoxFor(con => m.NumSlide, new { @class = "form-control", @type = "number", @min = "1", @max = "50" })
                        @Html.ValidationMessageFor(con => m.NumSlide)
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="form-group">
                        @Html.TextBoxFor(con => m.Link, new { @class = "form-control", maxlength = "500" })
                        @Html.ValidationMessageFor(con => m.Link)
                    </div>
                </div>
                <div class="col-lg-2">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(con => m.Id)
                    <button type="submit" name="action" value="BannerSave" class="btn btn-success" title="Сохранить">
                        <i class="fa fa-save"></i>
                    </button>
                    <button type="submit" name="action" value="BannerDelete" class="btn btn-link" title="Удалить">
                        <i class="fa fa-trash-o"></i>
                    </button>
                </div>
            </div>
        }
    }
</div>
